{
  "name": "counterplay",
  "version": "1.0.0",
  "description": "Counterplay - Expert Call of Duty weapon loadouts, counters, and meta analysis",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "cd server && npm run dev",
    "dev:web": "cd web && npm run dev",
    "build": "npm run build:server && npm run build:web",
    "build:server": "cd server && npm run build",
    "build:web": "cd web && npm run build",
    "deploy": "vercel --prod",
    "seed": "tsx scripts/seed-database.ts",
    "update-meta": "tsx scripts/scrape-meta.ts",
    "data:init": "tsx scripts/populate-initial-data.ts",
    "data:update": "tsx scripts/scrape-meta.ts",
    "data:sync": "tsx scripts/populate-initial-data.ts",
    "data:test": "tsx scripts/test-data-infrastructure.ts",
    "data:cleanup": "tsx scripts/cleanup-duplicates.ts",
    "data:health": "tsx scripts/health-check.ts",
    "data:migrate": "tsx scripts/migrate-weapons.ts",
    "data:migrate:dry-run": "tsx scripts/migrate-weapons.ts -- --dry-run",
    "data:migrate:v2": "tsx scripts/migrate-weapons.ts -- --target v2"
  },
  "workspaces": [
    "server",
    "web"
  ],
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^20.11.0",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vercel": "^33.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
